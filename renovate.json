{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automergeStrategy": "rebase",
    "automergeType": "pr",
    "automergeSchedule": ["* * * * 1-4"],
    "prConcurrentLimit": 0,
    "pruneBranchAfterAutomerge": true,
    "rpm": {
        "autoApprove": true,
        "enabled": true,
        "ignoreTests": false,
        "includePaths": ["rpms.lock.yaml"],
	"packageRules": [
          {
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "addLabels": ["lgtm", "approved"]
          }
        ],
        "platformAutomerge": true
    },
    "tekton": {
        "autoApprove": true,
        "automerge": true,
        "enabled": true,
        "ignoreTests": false,
        "includePaths": [".tekton/**"],
        "fileMatch": ["\\.yaml$", "\\.yml$"],
        "addLabels": ["approved", "lgtm"],
        "platformAutomerge": true
    }
}
